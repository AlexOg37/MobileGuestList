
@section Header
{
	@Html.Partial("_LoginHeaderPartial")
}

    <div class="container">
        <div class="logincontainer">
            <form method="post" class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="inputUsername">Username:</label>

                    <input name="Username" class="form-control" id="inputUserName">

                </div>
                <div class="form-group">
                    <label for="inputPassword3">Password:</label>

                    <input name="Password" type="password" class="form-control" id="inputPassword3">

                </div>
                <div class="form-group">
                    <label for="inputStation">Station:</label>

                    <input name="Station" type="text" class="form-control" id="inputStation">

                </div>

                <div class="form-group">

                    <div class="checkbox pull-left">
                        <label>
                            <input name="RememberStation" type="checkbox"> Remember station
                        </label>
                    </div>

                    <div class="pull-right">
                        <button type="submit" class="btn">Log In</button>
                    </div>

                </div>
                <div class="form-group">
                    <div class="nbsp" id="fb_inocs">
                        <a href="https://facebook.com/PromoSuite" target="_blank">
                            <img width="20" height="20" title="Like Us On Facebook" alt="Like Us On Facebook" src="~/Images/LinkFaceBook.png" border="0">
                        </a>
                        <a href="https://www.twitter.com/promosuite" target="_blank">
                            <img width="20" height="20" title="Follow Us On Twitter" alt="Follow Us On Twitter" src="~/Images/LinkTwitter.png" border="0">
                        </a>
                        <a href="https://plus.google.com/116874076172699520382/" target="_blank">
                            <img width="20" height="20" title="Follow Us On Google+" alt="Follow Us On Google+" src="~/Images/LinkGooglePlus.png" border="0">
                        </a>
                    </div>
                </div>


            </form>
        </div>
        </div>
