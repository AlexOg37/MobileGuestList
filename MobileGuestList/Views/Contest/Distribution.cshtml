
@section Header
{
	@Html.Partial("_HeaderBackButtonPartial")
}


<div>
      <div>
        <table width="300" align="center" border="0" cellspacing="0" cellpadding="0">
          <tbody>
            <tr>
              <td height="5">
                &nbsp;
              </td>
            </tr>
            <tr>
              <td>
                <h1>@ViewBag.Contest.Name</h1>
              </td>
            </tr>
            <tr>
              <td>
                <p>Some winners have not yet had their prize marked as distributed.</p>
              </td>
            </tr>
            <tr>
              <td>
                <p>Do you want to distribute to these winners?</p>
              </td>
            </tr>
            <tr>
              <td>
                  <div class="btn-group btn-group-justified" role="group" style="margin-top:20px">
                      <div class="btn-group" style="padding-right:5px;">
                          <input class="btn btn-default" value="Yes" onclick="location.href='@Url.Action("Distribute", new { Distribute = true })'" style="background-color:#014687 !important; color:#ffffff !important; padding-right:5px"  />
                      </div>
                      <div class="btn-group" style="padding-right:5px;">
                          <input class=" btn btn-default" value="No" onclick="location.href='@Url.Action("Distribute", new { Distribute = false })'" style="background-color:#014687 !important; color:#ffffff !important;" padding-right:5px />
                          </div>
                      <div class="btn-group">
                          <input class="btn btn-default" value="Cancel" onclick="location.href='@Url.Action("Selection")'" style="background-color:#014687 !important; color:#ffffff !important;" />
                      </div>
                      </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
