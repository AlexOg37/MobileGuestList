<div class="container">
    <form method="post" class="form-group">
    <div class="form-group" style="margin-top:10px; text-align:center;">       
        <select name="Id" class="form-control">
            <option value=0>Pick Your Contest</option>
            @{
                foreach (var contest in ViewBag.Contests)
                {
                        <option selected="" value=@contest.Id>@contest.Name</option>   
                        
                }
            }
        </select>
    </div>
        <div class="form-group" >
            <label style="font-size:90%;"for="SortByContestName">Sort By Contest Name</label>
            <div class="onoffswitch pull-right">
                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" checked>
                <label class="onoffswitch-label" for="myonoffswitch">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>


        </div>
        <div class="form-group" style="text-align:center; margin-top:50px">
            <input class="btn btn-default" type="submit" value="Generate Guest List!" style="background-color:#014687 !important; color:#ffffff !important; height:70px">
        </div>
 </form>
</div>
