<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @RenderSection("styles", false)
</head>
<body>
    <div id="wrap">
        @Html.Partial("_Navigation")
        <div>
            <div class="header">
                <div class="col">
                    <div>
                        @if (IsSectionDefined("BackButton"))
                        {
                        @RenderSection("BackButton")
                        }
                    </div>
                </div>
                <div class="col custom-width">
                    <div>
                        <img width="125" height="55" alt="" src="~/Images/HeaderLogo.png">
                    </div>
                </div>
                <div class="col sb-open-right">
                    <div>
                        @if (IsSectionDefined("Menu"))
                        {
                        @RenderSection("Menu")
                        }
                    </div>
                </div>
            </div>
            <div class="location pull-right">
                @{
                    if (ViewBag.Location != null)
                    {
                <span>@ViewBag.Location</span>
                    }
                }
            </div>
            <div>
                @RenderBody()
            </div>


        </div>
        <div id="footer">
            @if (IsSectionDefined("Footer"))
            {
            @RenderSection("Footer")
            }
            else
            {
            @Html.Partial("_FooterPartial")
            }
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/changeStation")
    <script>
        $(function () {
            $('#station_list').click(function () {
                $('#toggler').toggle('slow');
            });
            $(document).ready(function () {
                $('wrap').show().scrollLeft(100);
                $("#menu-ham").click(function () {

                    $(".panel").toggle("fast");
                    $(this).toggleClass("active");
                    return false;
                });
            });
        });
    </script>
    @RenderSection("scripts", false)
</body>
</html>
